<!-- Add these settings within the <appSettings> section -->
<appSettings>
  <!-- SMTP Server Configuration -->
  <add key="SmtpServer" value="smtp.gmail.com" />
  <!-- For Gmail: smtp.gmail.com, For Outlook: smtp-mail.outlook.com -->
  
  <add key="SmtpPort" value="587" />
  <!-- Standard ports: 587 (TLS), 465 (SSL), 25 (non-secure) -->
  
  <add key="SmtpUsername" value="your-email@example.com" />
  <!-- Your email address -->
  
  <add key="SmtpPassword" value="your-app-password" />
  <!-- Your email password or app-specific password -->
  
  <add key="SmtpEnableSsl" value="true" />
  <!-- true for secure connection (recommended) -->
  
  <add key="ContactFormRecipient" value="contact@pipedreamsdevelopers.com" />
  <!-- Email address where contact form submissions will be sent -->
</appSettings>